<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.fh.swengb.android_resifo.PersonalActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Personaldaten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/personalDatenUe"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/eTNachNamePer"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:hint="Familienname + Titel" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/eTVorNamePers"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:hint="Vorname" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/eTNachNameVorPer"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:hint="Familienname vor der ersten Eheschließung" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/geburtstagPers"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:hint="Geburtstag" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/eTReligionPers"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:hint="Religionsbekenntnis" />

                <TextView
                    android:text="Geschlecht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView200"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorPrimaryDark" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <RadioButton
                            android:text="weiblich"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rBweiblichPers"
                            android:layout_weight="1" />

                        <RadioButton
                            android:text="männlich"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rBmannPers"
                            android:layout_weight="1"
                            android:duplicateParentState="false"
                            android:checked="false" />

                    </RadioGroup>

                </LinearLayout>

                <TextView
                    android:text="Familienstand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorPrimaryDark" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.00" >

                    <RadioButton
                        android:text="eingetragene Partnerschaft lebend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rBPartnerPers"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="geschieden"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rBgeschiedenPers"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="verwitwet"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/rBverwitwetPers"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="verheiratet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rBverheiratetPers"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="ledig"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rBledigPers"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="Ehe aufgehoben (nichtig)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rBeheNichtigPers"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="hinterbliebener eingetragener Partner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rBhintereingePartPers"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="eingetragene Partnerschaft ausgelöst (nichtig)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rBPartnerNichtigPers"
                        android:layout_weight="1" />

                </RadioGroup>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/eTzmrZahlPers"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:hint="Angabe der ZMR-Zahl (soweit bekannt)" />

                <TextView
                    android:text="Geburtsort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="normal|bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/eTgeburtsOrtPers"
                    android:layout_weight="1"
                    android:hint="Geburtsort" />

                <TextView
                    android:text="Reisedokument bei Fremden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/eTArtDokuPers"
                    android:layout_weight="1"
                    android:hint="Art, z.B.: Reisepass" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/eTNrPers"
                    android:layout_weight="1"
                    android:hint="Nummer" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/eTausDatumPers"
                    android:layout_weight="1"
                    android:hint="Ausstellungsdatum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/eTbehoerdePers"
                    android:layout_weight="1"
                    android:hint="Ausstellende Behörde" />

                <TextView
                    android:text="Staatsangehörigkeit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorPrimaryDark" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <RadioButton
                            android:text="Österreich"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rBAustriaPers"
                            android:layout_weight="1" />

                        <RadioButton
                            android:text="anderer Staat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rBanStaatPers"
                            android:layout_weight="1" />
                    </RadioGroup>

                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/eTandererStaatPers"
                    android:layout_weight="1"
                    android:hint="Name des Staates" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="zurück"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button8"
                        android:layout_weight="1"
                        android:onClick="goBack" />

                    <Button
                        android:text="Weiter zur Anmeldung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button2"
                        android:layout_weight="1"
                        android:onClick="nextAnmeldung" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
